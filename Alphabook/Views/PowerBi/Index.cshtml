            </a>
            <a class="tile-ativo" data-categoria="tvs" onclick="showItems('tvs')">
                <span class="nome-tile">TVs</span>
            </a>
        </div>
    </div>

    <div id="controleRelatoriosItem" style="display:none">
        <h2 class="title-relatorios">Relatórios Detalhados</h2>
        <div id="documentos-container"></div>
    </div>

    <div id="iframe" style="display: none">
        <div id="iframe-container"></div>
    </div>
</div>

