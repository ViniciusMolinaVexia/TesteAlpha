            <a class="tile-ativo" data-categoria="Controladoria" onclick="showItems('Controladoria')">
                <span class="nome-tile">Controladoria</span>
            </a>
            <a class="tile-ativo" data-categoria="Facilities" onclick="showItems('Facilities')">
                <span class="nome-tile">Facilities</span>
            </a>
            <a class="tile-ativo" data-categoria="marketing" onclick="showItems('marketing')">
                <span class="nome-tile">Marketing</span>
            </a>
            <a class="tile-ativo" data-categoria="novosnegocios" onclick="showItems('novosnegocios')">
                <span class="nome-tile">Novos Negócios</span>
            </a>
            <a class="tile-ativo" data-categoria="comercial" onclick="showItems('comercial')">
